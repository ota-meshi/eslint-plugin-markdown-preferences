{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "lib": ["esnext", "DOM"],
    "allowJs": true,
    // "checkJs": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,

    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "tests/src/**/*",
    "tests/utils/**/*",
    "tools/**/*",
    "docs/.vitepress/**/*",
    "typings/**/*",
    "tsdown.config.ts"
  ],
  "exclude": [
    "lib/**/*",
    "docs/.vitepress/cache/**/*",
    "docs/.vitepress/dist/**/*"
  ]
}
